.row
  .col-xs-12
    .box
      .box-header
        %h3.box-title Centers
        .box-tools.pull-right
          .digg_pagination
            -# = will_paginate establishments 
      / /.box-header
      .box-body
        #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
          .row
            %br
          .row
            .col-sm-12
              %table#example1.table.table-bordered.table-striped.dataTable{"aria-describedby" => "example1_info", :role => "grid"}
                %thead
                  %tr{:role => "row"}
                    %th.sorting_asc{"aria-controls" => "example1", "aria-label" => "Rendering engine: activate to sort column descending", "aria-sort" => "ascending", :colspan => "1", :rowspan => "1", :style => "width: 182px;", :tabindex => "0"} Center Name
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Browser: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 100px;", :tabindex => "0"} Location
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Platform(s): activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 80px;", :tabindex => "0"} Contact
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "CSS grade: activate to sort column ascending", :colspan => "1", :rowspan => "1", :style => "width: 250px;", :tabindex => "0"} Options
                %tbody
                  - centers.each do |center|

                    %tr{:class => "#{cycle('even', 'odd')}"}
                      %td= center.name
                      %td= center.location
                      %td= center.phone_number
                      %td 
                        -if current_admin && current_admin.is_moderator?
                          = link_to 'Show', center, class: "label label-warning"
                          = link_to 'Edit', edit_center_path(center), class: "label label-default"
                        -elsif current_admin && current_admin.is_admin?
                          = link_to 'Show', center, class: "label label-warning"
                          = link_to 'Edit', edit_center_path(center), class: "label label-default"
                          = link_to 'Destroy', center, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger"

                %tfoot
                  %tr
                    %th{:colspan => "1", :rowspan => "1"} Center Name
                    %th{:colspan => "1", :rowspan => "1"} Location
                    %th{:colspan => "1", :rowspan => "1"} Contact
                    %th{:colspan => "1", :rowspan => "1"} Options
          .row
            .col-sm-5
              .page_info
                -# = page_entries_info establishments
            .col-sm-7
              .digg_pagination
                -# = will_paginate establishments 
      / /.box-body
    / /.box
  / /.col