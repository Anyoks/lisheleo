.row
  .col-xs-9
    .box
      .box-header
        %h3.box-title Bookings
        .box-tools.pull-right
          .digg_pagination
            = will_paginate clients 
      / /.box-header
      .box-body
        #example1_wrapper.dataTables_wrapper.form-inline.dt-bootstrap
          .row
            %br
          .row
            .col-sm-12
              %table#example1.table.table-bordered.table-striped.dataTable{"aria-describedby" => "example1_info", :role => "grid"}
                %thead
                  %tr{:role => "row"}
                    %th.sorting_asc{"aria-controls" => "example1", "aria-label" => "Rendering engine: activate to sort column descending", "aria-sort" => "ascending", :colspan => "1", :rowspan => "1",  :tabindex => "0"} Full Names                    
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Platform(s): activate to sort column ascending", :colspan => "1", :rowspan => "1",  :tabindex => "0"} Phone Number
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1",  :tabindex => "0"} Gender
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "Engine version: activate to sort column ascending", :colspan => "1", :rowspan => "1",  :tabindex => "0"} Center
                    %th.sorting{"aria-controls" => "example1", "aria-label" => "CSS grade: activate to sort column ascending", :colspan => "1", :rowspan => "1",  :tabindex => "0"} Options
                %tbody
                  - clients.each do |client|

                    %tr{:class => "#{cycle('even', 'odd')}"}
                      
                      %td= client.full_names                      
                      %td= client.phone_number
                      %td
                        -if client.gender.nil?
                          = "unspecified"
                        - else
                          =client.gender.gender.camelcase
                      %td= client.center.nil? ? 'Unspecified' : client.center.name
                      %td 
                        -if current_admin && current_admin.is_moderator?
                          = link_to 'Show Details', client, class: "label label-warning", "data-turbolinks" => "false"
                          = link_to 'Edit', edit_client_path(client), class: "label label-default"
                         
                          -# = link_to 'Edit', edit_admin_establishment_path(establishment), class: "label label-default"
                          -# = link_to "Details", admin_establishment_path(establishment), class: "label label-warning"                         
                          -# = link_to "Images", admin_establishment_pictures_path(establishment), class: "label label-success"
                        -elsif current_admin && current_admin.is_admin?
                          = link_to 'Show Details', client, class: "label label-warning","data-turbolinks" => "false"
                          = link_to 'Edit', edit_client_path(client), class: "label label-default"
                          = link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger"

                %tfoot
                  %tr
                    %th{:colspan => "1", :rowspan => "1"} Full Names                    
                    %th{:colspan => "1", :rowspan => "1"} Phone Number
                    %th{:colspan => "1", :rowspan => "1"} Gender
                    %th{:colspan => "1", :rowspan => "1"} Center
                    %th{:colspan => "1", :rowspan => "1"} Options
          .row
            .col-sm-5
              .page_info
                = page_entries_info clients
            .col-sm-7
              .digg_pagination
                = will_paginate clients 
      / /.box-body
    / /.box
  / /.col